{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "0.1.3",
  "npmClient": "pnpm",
  "command": {
    "version": {
      "conventionalCommits": true,
      "message": "chore(release): publish %s",
      "changelogPreset": "angular",
      "changelog": true,
      "exact": true,
      "forcePublish": true
    },
    "publish": {
      "message": "chore(release): publish %s",
      "conventionalCommits": true
    }
  },
  "packages": [
    "apps/*"
  ],
  "ignoreChanges": [
    "**/CHANGELOG.md",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}